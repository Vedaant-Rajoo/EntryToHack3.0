<% include ./partials/header %>
<form action="/team/allMentorChallenges" method="GET">
  <button class="btn btn-info btn-sm">See all mentor challenges</button>
</form>
<table class="table-striped table table-bordered">
  <tr class="thead-dark">
    <th>Name</th>
    <th>Roll No.</th>
    <th>Email</th>
    <th>Phone</th>
    <th>Skills</th>
  </tr>
  <% [...team.members].forEach(function (member) { 
      var skills = '';%>
  <tr>
    <td>
      <%= member.name %>
    </td>
    <td>
      <%= member.rollNumber %>
    </td>
    <td>
      <%= member.email %>
    </td>
    <td>
      <%= member.phone %>
    </td>
    <td>
      <ul>
        <% for(var i = 0; i < member.skills.length; i++){ %>
          <li>
            <% if(member.skills[i] !== '') {%>
            <%= member.skills[i];%>
            <% } %>
          </li>
        <% } %>
      </ul> 
    </td>
    <% }); %>
</table>
<% if(!team.challenge && team.mentor === '') { %>
<form action="/team/postChallenge" method="GET">
  <button class="btn btn-info btn-sm">Self challenge</button>
</form>
<% } else if(team.mentor !== ''){} else {%>
<p>
  Challenge posted:
  <br />
  <strong>Title:</strong> <%= team.challenge.title%>
  <br />
  <strong>Description:</strong> <%= team.challenge.description%>
  <br />
  <strong>Category:</strong> <%= team.challenge.category%>
  </p>
  <% }%>

<% include ./partials/footer %>